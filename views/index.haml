!!!
!= cc_html(:lang => 'en') do
  %head
    %title Thomas Metzmacher
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
    %link{:href => "/stylesheets/960.min.css", :rel => "stylesheet", :type => "text/css"}
    %script{:type => "text/javascript", :src  => "javascripts/jquery-1.8.2.min.js"}
    /[if lt IE 9]
      %script{:src => "http://html5shim.googlecode.com/svn/trunk/html5.js"}
    %link{:href => "/stylesheets/font-awesome.css", :rel => "stylesheet", :type => "text/css"}
    /[if IE 7]
      %link{:href => "/stylesheets/font-awesome-ie7.css", :rel => "stylesheet", :type => "text/css"}
    = css :application, :media => 'screen'

  %body
    .container_12.main
      .grid_3.suffix_1.sidebar
        .grid_3
          %img{:src => 'images/thomet_1.png', :width => '200px', :id => 'profile'}
        .grid_3.name
          %h1
            %span Thomas Metzmacher
            %em thomet
        .grid_3.details
          %dl
            %dt
              %i{:class => 'icon-map-marker'}
            %dd Leipzig/Germany
          %dl
            %dt
              %i{:class => 'icon-envelope'}
            %dd
              %a{:href => 'mailto:kontakt@thomet.de'} kontakt@thomet.de
          %dl
            %dt
              %i{:class => 'icon-link'}
            %dd
              %a{:href => 'http://www.thomet.de'} http://www.thomet.de

      .grid_8.content
        .grid_8.twitter
          .grid_8
            %img{:src => '/images/twitter-logo.gif', :height => '36px'}
          .grid_8
            = haml :_box_elements, :locals => { :elements => @tweets }

        .grid_8.github
          .grid_8
            %img{:src => '/images/github-logo.png', :height => '36px'}
          .grid_8
            = haml :_box_elements, :locals => { :elements => @repos }

  :javascript
    $('#profile').mouseover(function() {
      $(this).attr('src', "images/thomet_2.png");
    });

    $('#profile').mouseout(function() {
      $(this).attr('src', "images/thomet_1.png");
    });
